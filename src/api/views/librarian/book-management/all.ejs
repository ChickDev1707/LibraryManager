<%- contentFor('head') %> 
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
<%- contentFor('body') %> 
<div class="table-responsive container-xxl  mx-auto my-5" style="display: flex; flex-direction: column;">
    <div style="display: flex; flex-direction: row; justify-content: space-between; align-content: center; padding: 0 0.5rem; margin-bottom: 0.2rem;">
      <h1 style="font-weight: 700">
        QUẢN LÝ ĐẦU SÁCH
      </h1>
      
      <a 
      type="button" 
      class="btn btn-outline-info"
      href="books/new"
      style="align-self: flex-end; margin: 0rem 0 0.5rem; width: 10rem;"
      >
        Thêm
      </a>
    </div>
    

  <table class="table align-middle text-center table-striped">
  <thead class="table-dark">
    <tr>
      <th scope="col">Ảnh bìa</th>
      <th scope="col">Tên đầu sách</th>
      <th scope="col">Ngày nhập</th>
      <th scope="col">Giá</th>
      <th scope="col">Số lượng</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% books.forEach(book => { %>
      <tr key= <%=book._id%> >
        <td scope="col">
          <a  
          href="books/<%= book._id %>"
          >
            <img height="150" width="100" class="rounded" src="<%= book.anh_bia %>"/>
          </a>
        </td>
        <td scope="col" class="text-wrap"><%= book.ten_dau_sach %></td>
        <td scope="col" class="text-wrap"><%= book.ngay_nhap.toLocaleDateString('en-GB')%></td>
        <td scope="col" class="text-wrap"><%= book.gia %></td>
        <td scope="col" class="text-wrap"><%= book.so_luong %></td>
      
        <td scope="col" class="">
          <a 
          class="btn btn-info"
          href="books/<%=book._id %>/edit"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
            <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
          </svg>
        </a>
        </td>
        <td scope="col" class="">
          <form method="POST" action="/librarian/books/<%=book._id%>?_method=DELETE">
            <button 
              type="submit" 
              class="btn btn-danger rowder"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
              </svg>
            </button>
          </form>
        </td>
      </tr>
    <%} ) %>
    
    
  </tbody>
</table>
</div>