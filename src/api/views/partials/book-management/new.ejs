<div class="modal fade" id="new_modal">
    <div class="modal-dialog modal-xl modal-dialog-scrollable ">
      <div class="modal-content">
        <div class="modal-header py-2" >
            <h5 class="modal-title">Thêm đầu sách</h5>
          
            <button id="" 
                type="button" 
                class="btn-close" 
                data-bs-dismiss="modal" 
                aria-label="Close" 
            >
            </button>
        </div>
        <div class="modal-body container px-5 my-3">
            <form
                class="row flex-md-row needs-validation"
                action="/librarian/books"
                method="POST"
                id="new_form"
                novalidate
                onsubmit="return saveNewBook(event)"
            >

                <div class="col-sm-12 col-md-12 col-lg-4">
                    <input
                    class="filepond"
                    id="anh_bia-sach-moi"
                    name="anh_bia"
                    type="file"
                    accept="image/*"
                    >
                </div>

                <div class="col-sm-12 col-md-12 col-xl-8">
                    <div class="row mb-3">
                        <div class="col-sm-12 col-md-12 col-lg-6">
                            <div class="mb-3 input-item">
                                <label for="ten_dau_sach" class="input_lable">
                                    Tên đầu sách:
                                </label>
                                <input
                                    name="ten_dau_sach"
                                    id="ten_dau_sach"
                                    class="text-truncate input-field"
                                    type="text"
                                    value=""
                                    required
                                    placeholder="Tên đầu sách"
                                    
                                />
                                <div class="invalid-feedback">
                                    Vui lòng nhập tên đầu sách
                                </div>
                            </div>
                
                            <div class="mb-3 input-item">
                                <label for="the_loai" class="input_lable">
                                    Thể loại:
                                </label>
                                <select
                                    name="the_loai"
                                    id="the_loai"
                                    type="text"
                                    required
                                    class="dropdown-toggle input-field"
                                    
                                >
                                    <% bookCategories.forEach(category => { %>
                                    <option value=<%= category._id %>
                                    >
                                        <%= category.ten_the_loai %>
                                    </option>
                                <% }) %>
                                </select>
                                <div class="invalid-feedback">
                                Vui lòng chọn thể loại sách
                                </div>
                            </div>

                            <div class="mb-3 input-item">
                                <label for="tac_gia" class="input_lable">
                                    Tác giả:
                                </label>
                                <input
                                    name="tac_gia"
                                    id="tac_gia"
                                    type="text"
                                    value=""
                                    required
                                    class="text-truncate input-field"
                                    placeholder="Tác giả"
                                    
                                />
                                <div class="invalid-feedback">
                                    Vui lòng nhập tác giả
                                </div>
                            </div>
                            
                            <div  class="mb-3 input-item">
                                <label for="nha_xuat_ban" class="input_lable">
                                    Nhà xuất bản:
                                </label>
                                <input
                                    name="nha_xuat_ban"
                                    id= "nha_xuat_ban"
                                    type="text"
                                    value=""
                                    required
                                    class="text-truncate input-field"
                                    placeholder="Nhà xuất bản"
                                    
                                />
                                <div class="invalid-feedback">
                                    Vui lòng nhập nhà xuất bản
                                </div>
                            </div>

                            <div class="mb-3 input-item">
                                <label for="nam_xuat_ban" class="input_lable">
                                    Năm xuất bản:
                                </label>
                                <input
                                    name="nam_xuat_ban"
                                    id="nam_xuat_ban"
                                    type="number"
                                    value=""
                                    required
                                    class="text-truncate input-field"
                                    min="0"
                                    placeholder="Năm xuất bản"
                                    
                                />
                                <div class="invalid-feedback">
                                    Vui lòng nhập năm xuất bản
                                </div>
                            </div>

                            <div class="mb-3 input-item">
                                <label for="ngay_nhap"class="input_lable">
                                    Ngày nhập:
                                </label>
                                <input
                                    name="ngay_nhap"
                                    id="ngay_nhap"
                                    type="date"
                                    value=""
                                    required
                                    class="text-truncate input-field"
                                    
                                />
                                <div class="invalid-feedback">
                                    Vui lòng chọn ngày nhập sách
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12 col-md-12 col-lg-6">
                            <div class="mb-3 input-item">
                                <label for="gia" class="input_lable">
                                    Giá:
                                </label>
                                <input
                                    name="gia"
                                    id="gia"
                                    type="number"
                                    value=""
                                    required
                                    class="text-truncate input-field"
                                    placeholder="Giá"
                                    min="0"
                                    
                                />
                                <div class="invalid-feedback">
                                    Vui lòng nhập giá sách
                                </div>
                            </div>

                            <div class="mb-3 input-item">
                                <label for="so_luong" class="input_lable">
                                    Số lượng:
                                </label>
                                <input
                                    name="so_luong"
                                    id="so_luong"
                                    type="number"
                                    value=""
                                    required
                                    class="text-truncate input-field"
                                    placeholder="Số lượng"
                                    min="0"
                                    
                                />
                                <div class="invalid-feedback">
                                    Vui lòng nhập số lượng sách
                                </div>
                            </div>
                
                            <div class="input-item" >
                                <label for="tom_tat" class="input_lable">
                                    Tóm tắt:  
                                </label>
                                <textarea
                                    name="tom_tat"
                                    id="tom_tat"
                                    class="input-primary input-field"
                                    style="min-height: 270px;"
                                    required
                                    
                                ></textarea>
                                <div class="invalid-feedback">
                                    Vui lòng nhập tóm tắt nội dung sách
                                </div>
                            </div>
                            <div class="mt-3 d-flex justify-content-end">
                                <button class="submit-btn" id="btn-submit" style="min-width: 10rem;" type="submit">
                                    <i class="bi bi-check2"></i>
                                    Lưu
                                </button>
                            </div>
                        </div>        
                    </div>                      
                </div>
            </form>
        </div>
      </div>
    </div>
  </div>

