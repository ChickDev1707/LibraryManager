<tr id="row_<%=book._id%>">
  <td scope="col" class="name"><%= index+1 %></td>
  <td scope="col" class="name"><%= book.ten_dau_sach %></td>
  <td scope="col" class="date"><%= book.ngay_nhap.toLocaleDateString('en-GB')%></td>
  <td scope="col" class="price"><%= book.gia %></td>
  <td scope="col" class="quantity"><%= book.so_luong %></td>
  <td scope="col" class="action-container">  
    <form action="/book-head/<%= book._id %>" method="GET">
      <button type="submit" class="icon-btn"><i class="far fa-question-circle"></i></button>  
    </form>
    <button 
      class="icon-btn"
      type="button"
      data-bs-toggle="modal" 
      data-bs-target="#edit_modal_<%=book._id%>"
    >
      <i class="fas fa-edit" aria-hidden="true"></i>
    </button>
    
    <button 
      class="icon-btn danger"
      type="button"
      onclick="deleteBook('<%=book._id %>')"
    >
      <i class="fas fa-trash-alt"></i>
    </button>
  </td>
</tr>