
<%- contentFor('head') %>
<title>register card</title>
<style>
  .item-container{
    display: grid;
    grid-template-columns: repeat(4, 1fr); 
  }
  .item{
    border-radius: .5rem;
    overflow: hidden;
  }
  .item .top{
    position: relative;
    padding: .5rem 1rem 2.5rem;
    background-color: #ff9f43;
    color: white;
  }
  .item .top .content .icon{
    width: 2.5rem;
    height: 2.5rem;
    text-align: center;
    border-radius: 50%;
    line-height: 2.5rem;
    font-size: 1.2rem;
    background-color: #feca57;
    margin-right: .5rem;
  }
  .item p{
    margin: 0;
  }
  .item button{
    position: absolute;
    left: 0;
    bottom: 0;
    margin-top: 1rem;
    border: none;
    width: 100%;
    font-size: .8rem;
    padding: .25rem 0;
    background-color: rgba(42, 42, 42, .4);
    color: white;
  }
</style>
<%- contentFor('body') %> 
<%- include('../partials/header/reader-header.ejs') %> 

<div class="container">
  <h2>Giỏ đăng ký mượn sách của bạn</h2>
  <div class="d-flex justify-content-end" style="margin: 2rem 0 1rem 0">
    
  </div>
  <div class="container">
    <div class="item-container">
      <% registerCards.forEach(card =>{ %>
        <div class="item">
          <div class="top">
            <div class="content d-flex">
              <div class="icon"><i class="fas fa-book"></i></div>
              <div>
                <p><i class="fas fa-calendar-alt"></i> <%= card.ngay_dang_ky %> </p>
                <p>Đầu sách: <%= card.cac_dau_sach.length %> </p>
                <p>Tình trạng: <%= card.tinh_trang %> </p>
              </div>
            </div>
            <button type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample1" aria-expanded="false" aria-controls="collapseExample1">More-info</button>
          </div>
          <div class="collapse" id="collapseExample1">
            <div class="card card-body">
              <% card.cac_dau_sach.forEach(bookHead=>{ %>
                <p><%= bookHead.ten_dau_sach %> </p>
              <% }) %> 
            </div>
          </div>
        </div>
      <% }) %> 
    </div>
  </div>
</div>